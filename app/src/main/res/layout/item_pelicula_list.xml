<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margen_horizontal_item_pelicula"
    android:layout_marginBottom="10dp"
    android:paddingBottom="5dp"
    android:layout_gravity="center"
    android:background="@drawable/shape"
    tools:context=".activities.ListActivity">

    <!-- La escala de la imagen es 1:1,355633802816901 siendo horizontal y vertical -->

    <ImageView
        android:id="@+id/ItemIvCaratula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/itemTvTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxWidth="150dp"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:textAlignment="center"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ItemIvCaratula" />

    <TextView
        android:id="@+id/FilmDetailTvGenero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxWidth="150dp"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemTvTitulo"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/ItemTvDirector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxWidth="150dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FilmDetailTvGenero" />


</androidx.constraintlayout.widget.ConstraintLayout>