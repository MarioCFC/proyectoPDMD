<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/cardItemMarginHorizontal"
        android:layout_marginBottom="@dimen/cardItemMarginBottom"
        app:cardBackgroundColor="@color/cardItemBackgroundColor"
        app:cardCornerRadius="@dimen/cardItemCornerRadius"


        app:cardElevation="7dp"
        >

        <LinearLayout
            android:id="@+id/card_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/CardIvCaratula"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/cardIvCaratula" />

            <TextView
                android:id="@+id/CardTvTitulo"
                android:gravity="center|bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-black"
                android:maxLines="2"
                android:textSize="@dimen/CardItemTvTextSize" />

            <TextView
                android:id="@+id/CardTvGenero"
                android:gravity="center|bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/CardItemTcGenreMarginBottom"
                android:maxLines="2"
                android:textSize="@dimen/CardItemTvTextSize" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>